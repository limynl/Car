<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <!--e6e6e6 浅绿-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="8dp"
        android:background="#7ADFB8"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="23sp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>




    <com.team.car.utils.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/setting_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/setting_link"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_link"
                    android:text="账号绑定"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_grey" />

                <ImageView
                    android:id="@+id/setting_account_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_open"
                    android:textColor="@color/text_color_grey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/setting_message_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/setting_message_send"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_message_send"
                    android:text="消息推送"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_grey" />

                <com.team.car.widgets.SlideSwitch
                    android:id="@+id/setting_slide_switch"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/setting_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/setting_update"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_update"
                    android:text="版本更新"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_grey" />

                <ImageView
                    android:id="@+id/setting_version_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_open"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:background="#ffffff"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/setting_forback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/setting_forback"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_forback"
                    android:text="意见反馈"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_grey"/>

                <ImageView
                    android:id="@+id/setting_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_open" />
            </RelativeLayout>

            <Button
                android:id="@+id/setting_retreat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出当前账号"
                android:textColor="@color/text_color_grey"
                android:textSize="16sp"
                android:background="#ffffff"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/lmy"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描二维码\n下载车应用"
                android:layout_gravity="center"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车应用 v1.1.0"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/text_color_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:textColor="@color/text_color_grey"/>




            </LinearLayout>

        </com.team.car.utils.BounceScrollView>

</LinearLayout>