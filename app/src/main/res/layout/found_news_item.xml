<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/new_icon"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/news_pic_default"/>

    <LinearLayout
        android:layout_toRightOf="@id/new_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是标题"
            android:textSize="16sp"
            android:textColor="#707070"
            android:lines="2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:text="新浪军事"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/new_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:text="02-10 08:51"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:drawableLeft="@mipmap/news_time"
                android:drawablePadding="3dp"
                android:layout_marginRight="55dp"/>

            <TextView
                android:id="@+id/new_browse_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:text="100"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:drawableLeft="@mipmap/browse_number"
                android:drawablePadding="3dp"
                android:layout_marginRight="7dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#55000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>













