<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_svprogresshuddefault"
        android:gravity="center"
        android:minWidth="120dp"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ivBigLoading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivSmallLoading"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <!--进度条设置-->
        <com.team.car.widgets.dialogview.SVCircleProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:roundColor="@android:color/white"
            app:roundProgressColor="@android:color/black"
            app:roundWidth="2dip"
            android:visibility="gone" />

        <!--字体颜色-->
        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>